{% extends 'base-vitrine.html.twig' %}

{% block body %}
    {% set image = (article.image[:4] == "http") ? article.image : article_img_directory ~ article.image %}
    
    <!-- start Section -->
    <section id="single-article" class="section">
    <div class="page-content">
        <div class="container-fluid">
            <div class="profile-foreground position-relative mx-n4 mt-n4">
                <div class="profile-wid-bg">
                    <img src="/images/profile-bg.jpg" alt="" class="profile-wid-img" />
                    <div class="bloc-text">
                        <h1 class="title pres-style mb-2">{{ article.title }}</h1>
                        <p class="subtitle pres-style">{{ article.date|date("d M Y") }}</p>
                        <div class="category">
                            {% for key, label in article.category %}
                                <span class="label badge 
                                {% if key == 0 %}
                                    bg-warning 
                                {% elseif key == 1 %}
                                    bg-success 
                                {% elseif key == 2 %}
                                    bg-info
                                {% else %}
                                    bg-danger
                                {% endif %}
                                align-middle fs-10">{{ label }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="bloc-content">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="picture-bg">
                                    <img class="image-article" src="{{ image }}" alt="{{ article.image }}">
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="text-content">
                                    <p class="article-content">{{ article.content|raw }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- container-fluid -->
    </div>
    </section>
    <!-- end Section -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
