                async: true,
                beforeSend: function(){
                    $('#elmLoader').removeClass('d-none');
                },
                /* end beforeSend */
                success: function(data) {
                    $('#users-conversation').find('li').remove();

                    for (let i = 0; i < $(data).length; i++) {
                        var position = $(data)[i].user_sender_id_id == {{ currentUserId }} ? 'right' : 'left';

